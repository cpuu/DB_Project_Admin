<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ScrollView
        android:id="@+id/tab1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:stretchColumns="*">

            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#0000FF"

                    android:gravity="center"
                    android:text="이름"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#FFFF00" />

                <EditText
                    android:id="@+id/etname_readytoware"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="4"
                    android:clickable="false"
                    android:focusable="false"
                    android:inputType="text"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:text="김개똥" />

            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#0000FF"
                    android:gravity="center"
                    android:text="날짜"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#FFFF00" />

                <EditText
                    android:id="@+id/etday_readytoware"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="4"
                    android:clickable="false"
                    android:focusable="false"
                    android:inputType="text"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:text="2016년 7월 28일" />


            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#0000FF"
                    android:gravity="center"
                    android:text="사번"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#FFFF00" />

                <EditText
                    android:id="@+id/etnum_readytoware"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="4"
                    android:clickable="false"
                    android:focusable="false"
                    android:inputType="text"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:text="392849" />
            </TableRow>


            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#0000FF"
                    android:gravity="center"
                    android:text="구매번호"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#FFFF00" />


                <EditText
                    android:id="@+id/etpurchasenum_readytoware"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="4"
                    android:hint="번호입력"
                    android:inputType="number"
                    android:padding="10dp"
                    android:singleLine="true"
                    />

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="확인"
                    android:id="@+id/btnpurchasenumsearch_readtoware"
                    android:layout_weight="1"/>

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="입고시작"
                    android:id="@+id/btnstart_readtoware"
                    android:layout_weight="1"
                    android:clickable="false"/>


            </TableRow>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="_________________________________________________________"
                android:textStyle="bold"
                android:layout_weight="1"/>


            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#0000FF"
                    android:gravity="center"
                    android:text="ISBN"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#FFFF00" />


                <EditText
                    android:id="@+id/etISBN_readytoware"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:hint="번호입력"
                    android:inputType="number"
                    android:padding="10dp"
                    android:singleLine="true" />

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnISBNsearch_readytoware"
                    android:text="확인"
                    android:layout_weight="1"
                    />




            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#0000FF"
                    android:gravity="center"
                    android:text="제목"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#FFFF00" />


                <EditText
                    android:id="@+id/ettitle_readytoware"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:text="JAVA의 정석"
                    android:clickable="false"
                    android:focusable="false"
                    android:inputType="text"
                    android:padding="10dp"
                    android:singleLine="true"
                    />
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#0000FF"
                    android:gravity="center"
                    android:text="출판사"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#FFFF00" />


                <EditText
                    android:id="@+id/etpublic_readytoware"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:text="도우출판"
                    android:clickable="false"
                    android:focusable="false"
                    android:inputType="text"
                    android:padding="10dp"
                    android:singleLine="true"
                    />


            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#0000FF"
                    android:gravity="center"
                    android:text="저자"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#FFFF00" />


                <EditText
                    android:id="@+id/etauthor_readtoware"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:text="남궁성"
                    android:clickable="false"
                    android:focusable="false"
                    android:inputType="text"
                    android:padding="10dp"
                    android:singleLine="true"
                    />
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#0000FF"
                    android:gravity="center"
                    android:text="가격"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#FFFF00" />


                <EditText
                    android:id="@+id/etprice_readytoware"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:text="23000"
                    android:clickable="false"
                    android:focusable="false"
                    android:inputType="text"
                    android:padding="10dp"
                    android:singleLine="true"
                    />


            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#0000FF"
                    android:gravity="center"
                    android:text="바코드번호"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#FFFF00" />


                <EditText
                    android:id="@+id/etbarcode_readtoware"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:hint="바코드 입력"

                    android:inputType="number"
                    android:padding="10dp"
                    android:singleLine="true"
                    />
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#0000FF"
                    android:gravity="center"
                    android:text="등급"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#FFFF00" />

                <Spinner
                    android:id="@+id/spingrade_readytoware"
                    android:layout_width="fill_parent"

                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center">

                </Spinner>


            </TableRow>
            <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="*"
                android:layout_gravity="bottom">



                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"

                    >


                    <Button
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/btnaccept_readytoware"
                        android:text="완료"
                         />

                    <Button
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/btncancel_readytoware"
                        android:text="취소"
                         />


                </TableRow>
            </TableLayout>l


        </TableLayout>
    </ScrollView>
</LinearLayout>
